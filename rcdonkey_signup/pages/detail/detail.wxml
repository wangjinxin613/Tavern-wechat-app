<view class="page detail div">
  <view class="page__bd div">
    <view class="weui-tab div">
      <view class="weui-tab__panel div">
        <view class="title div">
          <text> {{activity.title}} </text>
        </view>
        <view class="summary div">
          <text> <text class="text-success">[活动每人收取<text>10</text>元费用，联系活动发布人线下支付]</text>{{activity.description}} </text>
        </view>
        <view class="weui-panel weui-panel_access div">
          <view class="weui-panel__bd div">
            <view class="author div">
              <image src="{{activity.organizer_avatar}}" alt="" class="avatar img"></image>
              <view class="nickname span">
                <text>{{activity.organizer_nickname}}</text>
              </view>
              <view class="tag span">
                <text>发起人</text>
              </view>
            </view>
            <view class="list div">
              <view class="item div">
                <view class="name div">
                  <text>报名截止时间</text>
                </view>
                <view class="time div">
                  <text>{{activity.join_deadline_date}}</text>
                </view>
              </view>
            </view>
			<block wx:if="{{activity.join_total > 0}}">
            <view class="join-num div">
              <view class="pull-right div">
                <view class="count">
                  <image src="data:image/png;base64," class="icon"></image>
                  <text class="num">
                    {{activity.join_total}}人
                  </text>
                </view>
                <view class="count">
                  <image src="data:image/png;base64," class="icon"></image>
                  <text class="num">
                    {{activity.join_total}}人
                  </text>
                </view>
              </view>
              <text> 活动参与 </text>
            </view>
            <view class="list-applicant">
              <view class="item" wx:for="{{activity.join_list}}">
                <image src="{{item.avatar}}" alt="" class="weui-media-box__thumb avatar"></image>
                <view class="info">
                  <view class="nickname">
                    {{item.remark}}
                    <text class="time"> {{item.join_date}} </text>
                  </view>
                  <view class="message">
                    <view class="message-content">
                      无留言
                    </view>
                    <view class="participant-info">
                      <text class="username">李雷</text>
                      <text class="tel">18812345678</text>
                      <text class="empty">该用户已设置身份信息只对发布者可见</text>
                    </view>
                  </view>
                </view>
               </view>
              </view>


