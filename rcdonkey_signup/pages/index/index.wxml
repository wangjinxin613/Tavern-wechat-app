<view class="page index div">

  <view class="empty" wx:if="{{activity.length == 0}}">
    <image class="img-msg" src="data:image/png;base64,"></image>
    <view class="message">您还没有任何活动记录</view>
  </view>

  <view class="weui-panel weui-panel_access div" wx:for="{{activity}}">
    <view class="weui-panel__bd div">
	<navigator url="/rcdonkey_signup/pages/detail/detail?id={{item.id}}" open-type="navigate" hover-class="other-navigator-hover">
      <view class="activity a">
        <view class="activity-info div">
          <view class="title text-over div">
            <text><text class="label-success">付费</text>{{item.title}} </text>
          </view>
		  <block  wx:if="{{item.status == '1' || item.status == '2'}}">
          <view class="date div">
            <text>报名截止：{{item.join_deadline_date}}</text>
          </view>
          <view class="status div">
            <text> 正在进行中 </text>
          </view>
		  </block>

		  <block  wx:if="{{item.status == '3'}}">
          <view class="status div">
            <text> 已结束 </text>
          </view>
		  </block>

          <view class="state publish div"  wx:if="{{item.is_organizer}}">
            <text>我发布的</text>
          </view>
			<view class="state join div"  wx:if="{{!item.is_organizer}}">
            <text>我参与的</text>
          </view>
        </view>
        <view class="activity-num weui-flex div">
          <view class="weui-flex__item div">
            <view class="div">
              <text>活动参与</text>
            </view>
            <view class="div">
              <text>{{item.join_total}}人报名</text>
            </view>
          </view>
          <view class="weui-flex__item avatar-img div">
            <image src="{{joiner.avatar}}" alt="" class="avatar img"  wx:for="{{item.join_list}}" wx:for-item="joiner"></image>
          </view>
        </view>
      </view>
	  </navigator>
      <view class="operate weui-flex div"  wx:if="{{item.is_organizer}}">
        <view class="weui-flex__item div">
		<navigator url="/rcdonkey_signup/pages/publish/publish?id={{item.id}}" open-type="navigate" hover-class="other-navigator-hover">
          <view class="edit a">
            <text>编辑</text>
          </view>
		  </navigator>
        </view>
        <view class="weui-flex__item div">
          <view class="account a">
            <text>记账</text>
          </view>
        </view>
        <view class="weui-flex__item div">
          <view class="del a" bindtap="onDeleteActivity" id="{{item.id}}">
            <text>删除</text>
          </view>
        </view>
      </view>
    </view>
  </view>

  <view class="btn-publish div">
    <navigator url="/rcdonkey_signup/pages/publish/publish" open-type="navigate" hover-class="other-navigator-hover">
      <text class="btn">发布</text>
    </navigator>
  </view>
</view>
<text> </text>