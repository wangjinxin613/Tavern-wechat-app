.zahuodian{
	width: 100vw;
	margin-top:14vh;
	height: 73vh;
}

.index-head-img image:first-child{
	width:100%;
	top:0;
	height: 11vh;
	background: #7CC3B6;
}
.footer{
	position: fixed;
	bottom: 0;
	left: 0;
	background: #7CC3B6;
}
.footer .single{
	background: #7CC3B6;
	float: left;
	width:33.3vw;
	text-align: center;
	padding:12px 0 8px 0;
	transition: all 1s;
}
.footer .single image{
	width: 30px;
	height: 30px;
	
}
.foot_img2{
	background: #7CC3B6;
	padding:12px;
	border:2px solid #fff;
	border-radius: 100px;
	margin-top: -25px;
}
.xin{
	padding:0 20px;
}
.xin .title{
	font-size: 14px;
	color: #444;
}
.xin .border{
	height: 0;
	border-top: 1px solid #ccc;
	margin-top: 20px;
	width:20%;
}
.xin-list{
	width: 100%;
	position: relative;
}
.xin-list .single:nth-of-type(1){
	z-index: 10;
}
