/**index.wxss**/
page{
	background: rgb(234,230,227);
 
}
.zahuodian{
	width: 100vw;
	margin-top:14vh;
	height: 73vh;
}

.index-head-img image:first-child{
	width:100%;
	top:0;
	height: 11vh;
	background: #7CC3B6;
}
.footer{
	position: fixed;
	bottom: 0;
	left: 0;
	background: #7CC3B6;
}
.footer .single{
	background: #7CC3B6;
	float: left;
	width:33.3vw;
	text-align: center;
	padding:12px 0 8px 0;
	transition: all 1s;
}
.footer .single image{
	width: 30px;
	height: 30px;
	
}
.foot_img2{
	background: #7CC3B6;
	padding:12px;
	border:2px solid #fff;
	border-radius: 100px;
	margin-top: -25px;
}
.xin{
	padding:0 20px;
	position: relative;
}
.xin .title{
	font-size: 14px;
	color: #444;
}
.xin .border{
	height: 0;
	border-top: 1px solid #ccc;
	margin-top: 20px;
	width:20%;
}
.xin-list{
	width: 100%;
	position: relative;
}
.xin-list .single:nth-of-type(1){
	z-index: 10;
}

.xin-list .single:nth-of-type(n+4){
	z-index: -1;
	transform:translateX(40px) scale(0.6);
	transform-origin: 100% 50% 0; 
}
.xin-list .single{
	transition: all 0.2s; 
	transition-delay: 0s;
	transition-timing-function:linear;
	overflow: hidden;
	border-radius: 1px;
	margin-top:15px;
	width: calc(100% - 60px);
	height: calc(100vh - 150px - 11vh);
	background: #fff;
	position: absolute;
	box-shadow: 3px 3px 10px 0px #777;
}
.xin-list .active{
	background-image:url("https://www.youzhis.cn/src/wancheng.png?s=1");
	background-position: left 19px bottom 10px;
	background-repeat: no-repeat;
	background-size: 20px;
}
.xin-shou{
	writing-mode: vertical-lr;
	font-size: 15px;
	float: left;
	padding:10px 2px 10px 2px;
	letter-spacing:4px;
	margin:0 15px;
	position: relative;
	top: 50%;
	width: 22px;
	max-height: 60%;
	overflow: hidden;
	transform: translateY(-50%);
	border: 1px solid #999;
}
.xin-body{
	text-indent: 2em;
	letter-spacing:0.1em;
	writing-mode:vertical-lr;
	max-width:40vw;
	line-height:8vw;
	overflow: hidden;
	float: left;
	height: 70%;
	vertical-align: middle;
	position: relative;
	top: 50%;
	transform: translateY(-50%);
	text-align:justify;
}
.shenglue{
	float: left;
	height: 70%;
	line-height:25px;
	width: 25px;
	text-align:justify;
	writing-mode:vertical-lr;
	margin-top: 23%;
	letter-spacing:10px;
}
.xin-xie{
	clear: both;
	font-size: 12px;
	position: absolute;
	right: 15px;
	bottom: 10px;
}
.tuisong-btn{
	position: absolute;
	right: 15px;
	top: 5px;
	transform-origin: 100% 0;
	transform: scale(0.4);
	font-size: 1.5em;
	background:  rgb(234,230,227);
	border: 2px solid #333;
	color: #333;
	padding:0px 15px;
	border-radius: 15px;
	filter: blur(0px); 
}
.tuisong{
	position: fixed;
	top: 10vh;
	background: #fff;
	height: 80vh;
	width: 82vw;
	left: 9vw;
	border-radius: 10px;
	border:0.1em dotted #333;


}
.tuisong .head-txt{
	width: 90%;
	margin: 0 auto;
	text-align: center;
	height: 40px;
	line-height: 40px;
	border-bottom: 0.08em dotted #ccc;
}
.tuisong .body{
	font-size: 0.8em;
	width:90%;
	left: 5%;
	position:absolute;
	top: 50%;
	transform: translateY(-50%);
	text-align: justify;
}
.tuisong .close{
	position: absolute;
	bottom: 10px;
	transform: scale(0.6);
	width: 50%;
	margin-left: 25%;
	background: #111;
	color: #fff;
}
.shouquan{
	position: fixed;
	left: 50%;
	transform: translateX(-50%) translateY(-50%);
	top:50%;
	background: #EE7700;
	color: #fff;
	z-index: 100;
}